{{!-- This is the menu container - visible after a user clicks the menu button --}}
<nav class="nav">
    <ul>
        {{#foreach navigation}}
            <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute="true"}}" title="{{label}}">{{label}}</a></li>
        {{/foreach}}
    </ul>
    <a href="#" class="search-trigger"></a>
</nav>

{{!-- This is the search container - visible after a user clicks the search button --}}

<div id="morphing" class="complete">
    <svg width="100%" height="100%" viewBox="0 0 10 10" preserveAspectRatio="none" style="position: absolute; top: 0; left: 0; pointer-events: none;" xmlns:xlink="http://www.w3.org/1999/xlink"><path class="path" fill="#FFF100" d="M 10,0 L 10,0 C 10,0 10,0 5,0 C 0,0 0,0 0,0 L 0,0 Z"></path></svg>
</div>

<div class="search-container">
    <form>
        <input id="search-field" placeholder="Search" autocomplete="off"/>
    </form>
    <ul id="results"></ul>
</div>